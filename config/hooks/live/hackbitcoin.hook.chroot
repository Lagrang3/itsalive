#!/bin/sh

set -e

export DICEEXE=/home/user/Desktop/dice.py

cd /opt
git clone https://github.com/Lagrang3/hackbitcoin
cd /opt/hackbitcoin
python3 -m venv venv
. venv/bin/activate
pip install -r requirements.txt
pip install .
echo "#!"$(which python) > $DICEEXE && cat examples/dice.py >> $DICEEXE
deactivate
chmod +x $DICEEXE
